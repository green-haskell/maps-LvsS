{-

    Retain all elements contained in b, in a.

-}

retainAll :: M.HashMap Key Datum -> M.HashMap Key Datum -> M.HashMap Key Datum
retainAll = M.intersectionWith const


{-

    Retain all elements contained in b, in a.
